@model List<DynamicApp.Models.Customer>
@{
    ViewBag.Title = "AddApplicationsToCustomers";


}

<h2>AddApplicationsToCustomers</h2>
@using (Html.BeginForm("AddApplicationsToCustomers", "Customers", FormMethod.Post, new { name = "customerToAppForm" }))
{
    foreach (var appId in (int[])ViewBag.AppIds)
    {
        <input type="hidden" name="appIDs" value="@appId" />
    }

    <table class="table table-responsive" id="customerTable">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Location
                </th>
                <th>
                   Domain
                </th>
                <th>
                    RDSVersion
                </th>
                 <th>
                    System
                </th>
                <th>
                   XAController
                </th>
                <th>
                    XenAppFarmName
                </th>
            </tr>
        </thead>

        <tbody>
            @for (var i=0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                       <input type="checkbox" name="customerIDs" value="@Model[i].id" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Domain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RDSVersion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].System)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].XAController)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].XenAppFarmName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Add Packages" class="btn btn-success" />
}


