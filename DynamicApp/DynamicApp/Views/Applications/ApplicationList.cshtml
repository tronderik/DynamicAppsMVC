@model DynamicApp.ViewModels.CustomerApplicationsVM

@{
    ViewBag.Title = "ApplicationList";
}

<h2>ApplicationList</h2>


@using (Html.BeginForm("AddApplicationToCustomer", "Applications", FormMethod.Post))
{   
    @Html.Hidden("customerID", Model.Customer.id)

    <table class="table table-responsive table-bordered">
        <tr>
            <th>

            </th>
            <th>
                @Html.ActionLink("Application Group", "ApplicationList", new {sortOrder = ViewBag.ApplicationGroupSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Application Name", "ApplicationList", new {sortOrder = ViewBag.ApplicationNameSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Version", "ApplicationList", new {sortOrder = ViewBag.ApplicationVersionSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Vendor", "ApplicationList", new {sortOrder = ViewBag.ApplicationVendorSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Created By" , "ApplicationList", new {sortOrder = ViewBag.ApplicationCreatedBySortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Date Created", "ApplicationList", new {sortOrder = ViewBag.ApplicationDateCreatedSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Modified By", "ApplicationList", new {sortOrder = ViewBag.ApplicationModifiedBySortParm, customerID = Model.Customer.id })
            </th>
            <th>
                @Html.ActionLink("Date Last Modified", "ApplicationList", new {sortOrder = ViewBag.ApplicationDateLastModifiedSortParm, customerID = Model.Customer.id })
            </th>
            <th>
                PackageID
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ApplicationList)
        {
            <tr>
                <td>
                    <input type="checkbox" name="ids" value="@item.id" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Index)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateLastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageId)
                </td>
            </tr>
        }

    </table>
    <button class="btn btn-success">
        Add Packages
    </button>
}