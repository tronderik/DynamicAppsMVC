@model DynamicApp.ViewModels.CustomerApplicationsVM

@{
    ViewBag.Title = "ApplicationList";
}

<h2>ApplicationList</h2>


@using (Html.BeginForm("AddApplicationToCustomer", "Applications", FormMethod.Post))
{   
    @Html.Hidden("customerID", Model.Customer.id)

    <table style="display:none" id="appTable">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Application Group
                </th>
                <th>
                    Application Name
                </th>
                <th>
                    Version
                </th>
                <th>
                    Vendor
                </th>
                <th>
                    Created By
                </th>
                <th>
                    Date Created
                </th>
                <th>
                    Modified By
                </th>
                <th>
                    Date Last Modified
                </th>
                <th>
                    PackageID
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ApplicationList)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@item.id" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Index)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Version)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateLastModified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-success">
        Add Packages
    </button>
}

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#appTable").DataTable();

            $("#appTable").css("display", "block");
        });
    </script>    
}